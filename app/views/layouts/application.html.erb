<!DOCTYPE html>
<html>
<head>
  <title>Nickie O'Toole - <%= yield (:title) || "Real estate" %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body style="background-color:#ebf6fa;">
<div class="outer">
	<div class="header">
		<div style="float:left;margin-top:10px">
			<%= link_to( image_tag("logo2_dots_100.png"), root_path) %>
		</div>
		<%= render :partial => "layouts/signin_menu" %>
		<div class="header_nav">
			<%= link_to '/about', :style => 'text-decoration:none;' do %><div class="nav_button">About</div><% end %>
			<%= link_to properties_path, :style => 'text-decoration:none;' do %><div class="nav_button">Listings</div><% end %>
			<div class="nav_button">Search</div>
			<div class="nav_button">Blog</div>
			<div class="nav_button">Contact</div>
			<% if user_signed_in? %>
				<%= link_to user_info_path(current_user_info), :style => 'text-decoration:none;' do %><div class="nav_button">Account</div><% end %>
			<% else %>
				<%= link_to new_user_registration_path, :style => 'text-decoration:none;' do %><div class="nav_button">Account</div><% end %>
			<% end %>

		</div>
	</div>
	<div class="inner full_grey_shadow fifteen_radius">
		<% if content_for?(:top_content_header) %>
		  <div class="top_content_header top_fifteen_radius">
		  	<%= yield :top_content_header %>
		  </div>
		<% end %>

  		<% if content_for?(:top_content) %>
		  <div class="top_content">
		    <p class="notice"><%= notice %></p>
		    <p class="alert"><%= alert %></p>
		    <%= yield :top_content %>
		  </div>
		<% else %>
		    	<p class="notice"><%= notice %></p>
		    	<p class="alert"><%= alert %></p>
	    <% end %>

		<% if content_for?(:featured)  %>		
			<%= yield :featured %>
		<% end %>
		
		<div class="main_content">
			<%= yield %>
		</div>
	</div>
</div>
<div class="footer">
	<div style="height:300px">blahblahblah</div>
</div>
</body>
</html>
