<% title "Sign In"%>
<h2><%= yield :title%></h2>

<div class="left_content">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <p><%= f.label :email %><br />
  <%= f.text_field :email %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password %></p>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <% end -%>

  <p><%= f.submit "Sign in" %></p>
<% end %>
<%= render :partial => "devise/shared/links" %>
</div>

<div class="right_content">
	<p><strong>Sign in through one of these services:</strong></p>
	<a href="/auth/twitter" class="auth_provider"><%= image_tag "twitter_64.png", :size => "64x64", :alt => "Twitter" 	%></a>  
	<a href="/auth/facebook"class="auth_provider"><%= image_tag "facebook_64.png", :size => "64x64", :alt => "Facebook" %></a>  
	<a href="/auth/google" 	class="auth_provider"><%= image_tag "google_64.png", :size => "64x64", :alt => "Google" 	%></a>  
	<a href="/auth/yahoo" 	class="auth_provider"><%= image_tag "yahoo_64.png", :size => "64x64", :alt => "OpenID" 		%></a>  
	<div class="clear"></div>
</div>